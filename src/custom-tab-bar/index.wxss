.tabbar_box {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 999;
  width: 100%;
  height: 100rpx;
  box-shadow: 0 0 2px rgba(1, 0, 0, 0.1);
  padding-bottom: env(safe-area-inset-bottom);
}

.tabbar_nav {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 20rpx;
  height: 100%;
  padding: 5px 0px 5px 0px;
  position: relative;
}
.tabbar_icon {
  width: 40rpx;
  height: 40rpx;
  padding-bottom: 5rpx;
}
.special-wrapper {
  position: absolute;
  top: -36rpx;
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  border-top: 2rpx solid #f2f2f3;
  background-color: #fff;
  text-align: center;
  box-sizing: border-box;
  padding: 6rpx;
}
.special-wrapper .tabbar_icon {
  width: 85rpx;
  height: 85rpx;
}
.special-text-wrapper {
  width: 56rpx;
  height: 56rpx;
}

.tabbar_text {
  padding-bottom: 20rpx;
}
